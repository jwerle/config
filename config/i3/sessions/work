# vim: set syntax=i3:

## displays
set $dp0 DP-0
set $dp1 HDMI-0

## terminal
set $ws1 1: &#xf120;

## chrome
set $ws2 2: &#xf268;

## slack
set $ws3 3: &#xf198;

## hangouts
set $ws4 4: &#xf075;

## spotify
set $ws5 5: &#xf1bc;

## style titles
for_window [class=".*"] title_format "<b>%title</b>"

## resize
for_window [class="Termite"] resize 800px 500px
for_window [title="Google Hangouts"] resize 600px 400px

## floating windows
for_window [class="Nvidia-settings"] floating enabled
for_window [class="Google-chrome"] floating enabled
for_window [window_role="pop-up"] floating enabled
for_window [class="Termite"] floating enabled

## workspace assignments
for_window [title="Spotify" class="Spotify"] move container to workspace "$ws5"
for_window [title="Google Hangouts"] move container to workspace "$ws4"
assign [class="Termite" title="Terminal"] "$ws1"
assign [class="Google-chrome"] "$ws2"
assign [class="Slack"] "$ws3"
assign [class="Spotify"] "$ws5"

## display assignments
workspace "$ws1" output $dp0
workspace "$ws2" output $dp0
workspace "$ws3" output $dp0
workspace "$ws4" output $dp0
workspace "$ws5" output $dp0

## launch programs
exec google-chrome-stable
exec termite -e tmux
exec spotify
exec slack
