[global/wm]
margin-top = 5
margin-bottom = 5

;=== Top Bar ===;
[bar/top]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 60
offset-x = 0
padding-left = 5
padding-right = 5

background = #111111
foreground = #888888

font-0 = Source Sans Pro:pixelsize=18;1
font-1 = unifont:size=10:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=14;0
font-3 = FontAwesome:pixelsize=18;0

modules-left = pacman-update launcher
modules-right = volume wireless-network battery temperature cpu memory

override-redirect = true
wm-restack = i3

;=== Top Bar (Secondary)===;
[bar/top-secondary]
monitor = ${env:MONITOR:HDMI-2}
width = 100%
height = 60
offset-x = 0
padding-left = 5
padding-right = 5

background = #111111
foreground = #888888

font-0 = Source Sans Pro:pixelsize=18;1
font-1 = unifont:size=10:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=14;0
font-3 = FontAwesome:pixelsize=18;0

modules-left = music
modules-right = battery temperature cpu memory date wireless-network

override-redirect = true
wm-restack = i3

;=== Bottom Bar ===;
[bar/bottom]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 60
offset-x = 0
offset-y = 0
spacing = 1
;padding-left = 5
;padding-right = 5

bottom = true

background = #00000000
foreground = #888888

font-0 = hack:heavy:pixelsize=18;1
font-1 = unifont:size=10:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=24;0

modules-left = music
modules-center = i3
modules-right = date

tray-transparent = true
tray-position = right
tray-padding = 0
tray-maxsize = 25
tray-scale = 1

override-redirect = true
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 5
label-mode-foreground = #ffffff

label-unfocused-foreground = #888888
label-unfocused-padding = 1

label-visible-foregroud = #888888
label-visible-padding = 1

label-focused-foreground = #ffffff
label-focused-padding = 1

label-urgent-padding = 1

[module/date]
type = internal/date
interval = 5
date = "%B %d, %Y"
date-alt = " %d"
time = " %H:%M"
time-alt =  %H:%M
label = "  %date%    %time%"
label-margin-left = 4

[module/volume]
type = internal/volume
format-volume = "<label-volume> <bar-volume>"

label-volume = "  "
label-muted = " Muted"
label-volume-foreground = ${root.foreground}

label-volume-margin-left = 4
label-muted-margin-left = 4

bar-volume-width = 12
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = │
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = #ff
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground =

[module/wireless-network]
type = internal/network
interface = wlp59s0

format-connected-padding = 8
format-disconnected-padding = 2
format-packetloss-padding = 2

format-connected = "<label-connected>"
format-disconnected = "<label-disconnected>"
format-packetloss = "<animation-packetloss> <label-connected>"

;label-packetloss = ""
;label-packetloss-foreground = #66ffffff
label-packetloss-margin-left = 4

label-connected = "%essid%"
label-connected-foreground = #eefafafa
label-connected-margin-left = 4

label-disconnected = "Not connected"
label-disconnected-foreground = #66ffffff
label-disconnected-margin-left = 4

[module/launcher]
type = custom/menu
label-open = " "
label-close = "   "
label-separator = "  "
label-open-foreground = #4d6b9b
margin-right = 4

menu-0-0 = ""
menu-0-0-foreground = #fefefe
menu-0-0-exec = termite -e tmux -t Terminal

menu-0-1 = ""
menu-0-1-foreground = #399de5
menu-0-1-exec = google-chrome-stable --force-device-scale-factor=2

menu-0-2 = ""
menu-0-2-foreground = #5ca835
menu-0-2-exec = spotify --force-device-scale-factor=2

menu-0-3 = ""
menu-0-3-foreground = #ffffff
menu-0-3-exec = slack --force-device-scale-factor=2

menu-0-4 = ""
menu-0-4-foreground = #ffffff
menu-0-4-exec = google-chrome-stable --force-device-scale-factor=2 https://github.com


[module/memory]
type = internal/memory
label = " %gb_used%/%gb_free%"
label-margin-left = 4

[module/cpu]
label-margin-left = 4
type = internal/cpu
format = <label>
label = " %percentage%%"

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60
label = " %temperature%"
label-margin-left = 4

[module/battery]
label-margin-left = 4
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M

format-dcharging-padding = 5
format-discharging-padding = 5
format-full-padding = 5

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-discharging = <ramp-capacity> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-full = <ramp-capacity> <label-full>

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = Charging %percentage%%

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = Discharging %percentage%%

; Available tokens:
;   %percentage% (default)
label-full = Fully charged

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

[module/music]
;label-padding = 2
label-margin-left = 4
type = custom/script
interval = 2
label = " %output:0:25:...%"
exec = ~/repos/config/config/i3/blocks/playerctl

[module/pacman-update]
type = custom/script
label-margin-right = 4
interval = 1200
format = <label>
format-underline = #dc322f
label = "%output:0:60:...%"
exec = ~/repos/config/config/i3/blocks/pacman-update
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

