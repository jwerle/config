[module/wireless-network]
type = internal/network
interface = wlp59s0

format-connected-padding = 2
format-disconnected-padding = 2
format-packetloss-padding = 2

format-connected = "<label-connected>"
format-disconnected = "<label-disconnected>"
format-packetloss = "<animation-packetloss> <label-connected>"

;label-packetloss = ""
;label-packetloss-foreground = #66ffffff
label-packetloss-margin-left = 2

label-connected = "%essid%"
label-connected-foreground = #B8BEC3
label-connected-margin-left = 2

label-disconnected = "Not connected"
label-disconnected-foreground = #273F51
label-disconnected-margin-left = 2

[module/memory]
type = internal/memory
label = " %gb_used%/%gb_free%"
label-margin-left = 4

[module/cpu]
label-margin-left = 4
label-margin-right = 4
type = internal/cpu
format = <label>
label = " %percentage%%"

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60
label = " %temperature%"
label-margin-left = 4
label-margin-right = 4

[module/battery]
label-margin-left = 2
label-margin-right = 2
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5
time-format = %H:%M

format-dcharging-padding = 5
format-discharging-padding = 5
format-full-padding = 5

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-discharging = <ramp-capacity> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
format-full = <ramp-capacity> <label-full>

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = %percentage%%

; Available tokens:
;   %percentage% (default)
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = (%percentage%%)

; Available tokens:
;   %percentage% (default)
label-full = Fully charged

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 =  
animation-charging-1 =  
animation-charging-2 =  
animation-charging-3 =  
animation-charging-4 =  
; Framerate in milliseconds
animation-charging-framerate = 750

[module/music]
label-margin = 2
type = custom/script
interval = 2
label = " %output:0:40:...%"
exec = ~/repos/config/config/i3/blocks/playerctl

[module/pacman-update]
type = custom/script
label-margin-right = 4
interval = 1200
format = <label>
format-underline = #dc322f
label = "%output:0:60:...%"
exec = ~/repos/config/config/i3/blocks/pacman-update
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

[module/btc]
type = custom/script
interval=60
label-foreground = #1D3546
separator=false
exec = ~/repos/config/config/i3/blocks/cryptoticker BTC
label = "  %output:0:12:% "
